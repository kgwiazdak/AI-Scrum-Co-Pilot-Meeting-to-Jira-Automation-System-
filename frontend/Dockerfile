FROM node:22-alpine AS builder
WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .

ARG VITE_API_URL
ARG VITE_APP_PROFILE
ARG VITE_AZURE_AD_CLIENT_ID
ARG VITE_AZURE_AD_TENANT_ID
ARG VITE_AZURE_AD_SCOPES
ENV VITE_API_URL=${VITE_API_URL}
ENV VITE_APP_PROFILE=${VITE_APP_PROFILE}
ENV VITE_AZURE_AD_CLIENT_ID=${VITE_AZURE_AD_CLIENT_ID}
ENV VITE_AZURE_AD_TENANT_ID=${VITE_AZURE_AD_TENANT_ID}
ENV VITE_AZURE_AD_SCOPES=${VITE_AZURE_AD_SCOPES}

RUN npm run build

FROM nginx:stable-alpine
COPY --from=builder /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 4173
CMD ["nginx", "-g", "daemon off;"]
